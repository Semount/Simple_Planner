<Window x:Class="Simple_Planner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Simple_Planner"
        mc:Ignorable="d"
        Title="SimplePlanner" Height="800" Width="600" Loaded="Window_Loaded">
    <Grid Margin="2">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="Left_Bar" Width="180"/>
            <ColumnDefinition x:Name="Main_Space" Width="*" />
        </Grid.ColumnDefinitions>
        
        <UniformGrid Grid.Column="0">
            <DockPanel LastChildFill="False">
                <Button x:Name="Collapse_button" DockPanel.Dock="Top" Height="20" Content="Collapse" FontSize="13" Click="Button_Collapse"/>
            </DockPanel>
        </UniformGrid>

        <UniformGrid Grid.Column="1">
            <DataGrid x:Name="TaskList" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Path=CreationDate}"  IsReadOnly="True" Header="Created at" Width="0.3*"></DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding Path=Text}" IsReadOnly="False" Header="Description" Width="*"></DataGridTextColumn>
                    <DataGridCheckBoxColumn Binding="{Binding Path=IsDone, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="False" Header="Done" Width="0.15*"></DataGridCheckBoxColumn>
                </DataGrid.Columns>
            </DataGrid>
        </UniformGrid>
    </Grid>
</Window>
