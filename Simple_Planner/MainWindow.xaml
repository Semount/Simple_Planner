<Window
    x:Class="Simple_Planner.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Simple_Planner"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SimplePlanner"
    Width="600"
    Height="800"
    Loaded="Window_Loaded"
    mc:Ignorable="d">
    <Grid Margin="2">
        <UniformGrid Grid.Column="1">
            <DataGrid x:Name="TaskList" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="0.35*"
                        Binding="{Binding Path=CreationDate}"
                        Header="Created at"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Path=Text}"
                        Header="Description"
                        IsReadOnly="False" />
                    <DataGridCheckBoxColumn
                        Width="0.15*"
                        Binding="{Binding Mode=TwoWay, Path=IsDone, UpdateSourceTrigger=PropertyChanged}"
                        Header="Done"
                        IsReadOnly="False">
                        
                    </DataGridCheckBoxColumn>

                </DataGrid.Columns>
            </DataGrid>
        </UniformGrid>
    </Grid>
</Window>
