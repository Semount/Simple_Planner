<Window
    x:Class="Simple_Planner.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Simple_Planner"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:Simple_Planner.ViewModels"
    Title="SimplePlanner"
    Width="600"
    Height="700"
    AllowsTransparency="True"
    Background="Transparent"
    Loaded="Window_Loaded"
    ResizeMode="CanMinimize"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.DataContext>
        <viewModel:MainViewModel />

    </Window.DataContext>

    <Border Background="#405080" CornerRadius="5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock
                Margin="5,10,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontSize="13"
                Foreground="White"
                Text="Simple Planner" />
            <StackPanel Grid.Row="1">
                <RadioButton
                    Height="50"
                    Command="{Binding HomeViewCommand}"
                    Content="Home"
                    FontSize="14"
                    Foreground="White"
                    IsChecked="True"
                    Style="{StaticResource MenuButtonStyle}" />

                <RadioButton
                    Height="50"
                    Command="{Binding MPlannerViewCommand}"
                    Content="Planner"
                    FontSize="14"
                    Foreground="White"
                    Style="{StaticResource MenuButtonStyle}" />

                <RadioButton
                    Height="50"
                    Command="{Binding QuickNotesViewCommand}"
                    Content="Quick Notes"
                    FontSize="14"
                    Foreground="White"
                    Style="{StaticResource MenuButtonStyle}" />

            </StackPanel>

            <StackPanel
                Grid.Row="0"
                Grid.Column="1"
                HorizontalAlignment="Right"
                Orientation="Horizontal">

                <Button
                    x:Name="Close_Button"
                    Width="15"
                    Height="15"
                    Margin="0,5,5,20"
                    Padding="0.8,-2.5,1,1"
                    Background="#FF5050"
                    BorderBrush="#FF8080"
                    BorderThickness="0.5"
                    Click="Close_Button_Click"
                    Content="x"
                    FontSize="10">
                    <Button.Effect>
                        <DropShadowEffect
                            BlurRadius="5"
                            Direction="330"
                            Opacity="0.8"
                            RenderingBias="Performance"
                            ShadowDepth="3" />
                    </Button.Effect>
                </Button>

            </StackPanel>

            <ContentControl
                Grid.Row="1"
                Grid.Column="1"
                Margin="10"
                Content="{Binding currentView}" />



        </Grid>
    </Border>
</Window>
